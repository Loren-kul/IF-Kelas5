generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // atau postgresql
}

enum Role {
  GURU
  SISWA
}

model User {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String   @unique
  password  String
  role      Role     @default(SISWA)
  createdAt DateTime @default(now())
}

model Semester {
  id   Int    @id @default(autoincrement())
  nama String

  bab  Bab[]   //  RELASI BALIK
}

model Bab {
  id         Int      @id @default(autoincrement())
  nama       String
  semesterId Int

  semester   Semester @relation(fields: [semesterId], references: [id])
  materi     Materi[] //  RELASI BALIK
}

model Materi {
  id    Int    @id @default(autoincrement())
  judul String
  isi   String
  babId Int

  bab   Bab @relation(fields: [babId], references: [id])
}
